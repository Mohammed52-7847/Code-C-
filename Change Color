#include <iostream>
#include <string>

using namespace std;

enum enColor{Red = 1,Blue = 2,Green = 3,Yellow = 4};

int ReadNumber()
{
	int x = 0;
	cout << "Chooice Your Number? ";
	cin >> x;
	return x;
}

void PrintColor(enColor MyColor)
{
	if (MyColor == enColor::Red)
	{
		system("Color 4F");
	}
	else if (MyColor == enColor::Blue)
	{
		system("Color 1F");
	}
	else if (MyColor == enColor::Green)
	{
		system("Color 2F");
	}
	else if (MyColor == enColor::Yellow)
	{
		system("Color 6F");
	}
	else
	{
		system("Color 9F");
	}
}
int main()
{
	
	PrintColor((enColor)ReadNumber());

	system("pause>0");
	return 0;
}
