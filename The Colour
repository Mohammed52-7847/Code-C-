#include <iostream>
#include <string>

using namespace std;

enum enColor {red = 1,yellow = 2,blue = 3,green = 4};

int ReadNumber()
{
	int Number = 0;
	cout << "Enter Your Number? ";
	cin >> Number;
	return Number;
}
int Print(int Number)
{
	if (enColor::red == Number)
	{
		return system("Color 4F");
	}
	else if (enColor::yellow == Number)
	{
		return system("Color 6F");
	}
	else if (enColor::blue == Number)
	{
		return system("Color 1F");
	}
	else if (enColor::green == Number)
	{
		return system("Color 2F");
	}
	else
	{
		return system("Color cF");

	}
}

int main()
{
	
	Print(ReadNumber());
	

	system("pause>0");
	return 0;
}
